<% provide(:title,"Log in") %>
<h1 class="session-new-title">ログイン</h1>

<div class="session-new">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with scope: :session, url: login_path, local: true do |f| %>

      <%= f.label :email,"メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password,"パスワード" %>
      <%= link_to "(パスワードを忘れた場合)",new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span class="remember-me">ログイン状態を保持</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>

    <p>新規登録して利用する。 <%= link_to "新規登録", signup_path %></p>
  </div>
</div>
</div>
