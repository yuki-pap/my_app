<% provide(:title, 'All users') %>
<h1 class="index-title">ユーザー一覧</h1>

<div class="form-wrapper">
  <div class="form">
    <%= form_with url: users_path, method: :get, local: true do |f| %>
      <%= f.label :key, 'ユーザー名',class: 'label' %>
      <%= f.text_field :key, class:'form-control' %>
      <%= f.submit '検索',class: 'index-serch'%>

    <% end %>
  </div>

  <div class="form">
    <%= form_with url: users_path, method: :get, local: true do |f| %>
      <%= f.label :study_key, '勉強分野　', class: 'label' %>
      <%= f.text_field :study_key, class:'form-control'%>
      <%= f.submit '検索',class: 'index-serch'%>

    <% end %>

  </div>
</div>

<div class="paginate-wrapper" >
  <%= will_paginate %>

  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.name, user %>
      </li>
      <% end %>
    </ul>

    <%= will_paginate %>
</div>
