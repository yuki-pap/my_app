
<div class="users-wrapper">
 <%= render partial:'shared/menu',locals:{menu: @menu_number} %>
  <div class="user-index-content">

  <div class="form-wrapper">
    <div class="form">
    <%= form_with url: users_path, method: :get, local: true do |f| %>
      <%= f.label :key, 'ユーザー名',class: 'label' %>
      <%= f.text_field :key, class:'form-control' %>
      <%= f.submit '検索',class: 'index-serch'%>

    <% end %>
    </div>

  <div class="form">
    <%= form_with url: users_path, method: :get, local: true do |f| %>
      <%= f.label :study_key, '勉強分野　', class: 'label' %>
      <%= f.text_field :study_key, class:'form-control'%>
      <%= f.submit '検索',class: 'index-serch'%>

    <% end %>

  </div>
  </div>

      <div class="paginate-wrapper" >

<div class="index">
  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.name, user %>
      </li>
      <% end %>
    </ul>

    <%= will_paginate @users %>
      </div>
  </div>
</div>
</div>
<div class="study-page-link-wrapper"><%= image_tag asset_path('pen_mark.png'),class: "study-page-link-image" %><%= link_to "勉強を始める！",study_path(current_user.studies&.find_by(date: Time.current.strftime("%Y年%m月%d日"))),class:"study-page-link"%></div>
